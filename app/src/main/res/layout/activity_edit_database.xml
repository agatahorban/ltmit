<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context="adlr.ltmit.activities.EditDatabaseActivity"
    android:weightSum="1">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_weight="0.8">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tableLayout1">


            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/meaningTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Meaning"
                    android:textSize="20sp"
                    android:layout_weight="0.4"
                    />

                <TextView
                    android:id="@+id/translationTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Translation"
                    android:textSize="22sp"
                    android:layout_weight="0.4"
                    />
                <TextView
                    android:id="@+id/ttv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text=""
                    android:textSize="22sp"
                    android:layout_weight="0.2"
                    />


            </TableRow>

        </TableLayout>
    </ScrollView>

    <Button
        android:id="@+id/deleteDatabaseButton"
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_layout"
        android:text="@string/delete_database"
        android:textColor="@color/buttonTextColor"
        android:onClick="deleteDatabase"
        android:layout_marginBottom="20dp"/>
</LinearLayout>